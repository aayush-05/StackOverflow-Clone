<div class="container">
  <div class="row">
    <div class="col-10 center-row">
      <h1 class="mt-5"><%= @user.name %></h1>
    </div>
  </div> <br>
  <div class="row">
    <div class="col-10 center-row">
      <h3 class="text-left">Questions Asked:</h3> <br>
      <% @questions.each do |question| %>
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h5><%= question.heading %></h5>
                <% if question.tags.count != 0 %>
                  <% question.tags.each do |tag| %>
                    <a href="<%= tag_path(tag) %>"><span class="badge badge-info"><%= tag.name %></span></a>
                  <% end %>
                <% end %>
              </div>
              <div class="card-body text-left">
                <p><%= question.description %></p>
              </div>
              <div class="card-footer text-right">
                <% if current_user == @user %>
                  <%= link_to "Delete", user_question_path(@user, question), method: :delete, class: "btn btn-danger" %>
                <% end %>
                <%= link_to "Show", user_question_path(@user, question), class: "btn btn-success" %>
              </div>
            </div> <br>
          </div>
        </div>
      <% end %>
    </div>
  </div>
