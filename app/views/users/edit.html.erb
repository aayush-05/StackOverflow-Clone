<div class="container">
  <div class="row">
    <div class="col-10 center-row">
      <h1 class="mt-5">Edit Profile</h1>
    </div>
  </div> <br>
  <div class="row">
    <div class="col-6 center-row">
      <%= form_with(scope: @user, method: :put, local: true, url: user_path(@user)) do |form| %>
      <div class="form-group text-left">
        <h6><%= form.label :name %></h6>
        <%= form.text_field :name, class: "form-control form-input" %>
      </div>
        <div class="form-group text-left">
          <h6><%= form.label :password %></h6>
          <%= form.password_field :password, class: "form-control form-input" %>
        </div>
        <div class="form-group text-left">
          <h6><%= form.label :password_confirmation %></h6>
          <%= form.password_field :password_confirmation, class: "form-control form-input" %>
        </div>
        <div class="form-group text-left">
          <%= form.submit class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
