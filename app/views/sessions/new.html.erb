<div class="container">
  <div class="row">
    <div class="col-10 center-row">
      <h1 class="mt-5">Log In</h1>
    </div>
  </div> <br>
  <div class="row">
    <div class="col-6 center-row">
      <%= form_with(scope: :session, url: login_path, local: true) do |form| %>
        <div class="form-group text-left">
          <h6><%= form.label :email %></h6>
          <%= form.email_field :email, class: "form-control form-input" %>
        </div>
        <div class="form-group text-left">
          <h6><%= form.label :password %></h6>
          <%= form.password_field :password, class: "form-control form-input" %>
        </div>
        <div class="form-group text-left">
          <%= form.submit "Login", class: "btn btn-success" %>
          <a href="<%= signup_path %>" class="ml-2">Register?</a>
        </div>
      <% end %>
    </div>
  </div>
</div>
